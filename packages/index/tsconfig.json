{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@fractaldb/shared": ["./../shared/src/"],
      "@fractaldb/shared/*": ["./../shared/src/*"],
      "@fractaldb/fractal-server": ["./../server/src/"],
      "@fractaldb/fractal-server/*": ["./../server/src/*"]
    }
  },
  "references": [
    { "path": "../server" },
    { "path": "../shared" }
  ]
}